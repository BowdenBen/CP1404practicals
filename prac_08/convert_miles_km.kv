BoxLayout:
    orientation: "vertical" # 3 main boxes
    BoxLayout:
        orientation: "horizontal"   # 2 boxes nested in top main box
        TextInput:
            id: input_miles
            text: "34"
            font_size: 52
        BoxLayout:
            orientation: "vertical" # 2 boxes nested in right of top box
            Button:
                text: "Up"
            Button:
                text: "Down"
    Button: # press to convewt entered input miles to kilometre output
        text: "Convert miles to km"
        on_press: app.handle_calculation()
    Label:
        id: output_kilometre
        font_size: 52
        text: "54.71756"
        color: (1, 1, .6, 1,)